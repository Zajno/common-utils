{
  "name": "@zajno/common",
  "version": "2.1.4",
  "description": "Zajno's re-usable utilities for JS/TS projects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zajno/common-utils.git"
  },
  "author": "Zajno <hello@zajno.com> (https://zajno.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Zajno/common-utils/issues"
  },
  "homepage": "https://github.com/Zajno/common-utils#readme",
  "exports": {
    "./*": "./dist/*"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "scripts": {
    "build": "tsc -P tsconfig.build.json",
    "build:clean": "rimraf ./dist tsconfig.build.tsbuildinfo && yarn build",
    "build:copy": "yarn build:clean && yarn copy-for-publish",
    "build:w": "yarn build --watch",
    "publish:local": "yarn build-for-publish && yarn copy-for-publish && cd dist && yalc push --replace --update",
    "publish:from-dist": "yarn build-for-publish && yarn copy-for-publish && cd dist && yarn publish",
    "build-for-publish": "yarn build:clean && yarn lint && yarn test",
    "copy-for-publish": "cpy --flat ../../LICENSE package.json README.md dist/",
    "lint": "eslint \"src/**/*.ts?(x)\"",
    "test": "vitest run"
  },
  "dependencies": {},
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/node": "^18.19.2",
    "@zajno/eslint-config": "^3.0.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.55.0",
    "fast-check": "^3.14.0",
    "jest-extended": "^4.0.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2",
    "vitest": "^1.0.1"
  },
  "peerDependencies": {
    "tslib": "^2.6"
  },
  "files": [
    "LICENSE",
    "!.DS_Store",
    "*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
