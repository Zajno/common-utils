{
    "name": "@zajno/common-monorepo",
    "description": "Monorepo package for ruling all of them",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "lerna run build:clean",
        "lint": "lerna run lint",
        "test": "lerna run test",
        "all": "yarn build && yarn lint && yarn test"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/node": "^18.19.2",
        "lerna": "^8.0.0",
        "rimraf": "^5.0.5",
        "run-shared-scripts": "^1.1.5",
        "vitest": "^1.0.1"
    },
    "rss": {
        "clean": "rimraf ./dist tsconfig.build.tsbuildinfo",
        "dev": "yarn clean && tsc --watch --noEmit",
        "build": "tsc -b tsconfig.build.json",
        "build:clean": "yarn clean && yarn build",
        "build:copy": "yarn build:clean && yarn copy-for-publish",
        "build:w": "yarn build --watch",
        "publish:local": "yarn build-for-publish && yarn copy-for-publish && cd dist && yalc push --replace --update",
        "publish:from-dist": "yarn build-for-publish && yarn copy-for-publish && cd dist && yarn publish",
        "build-for-publish": "yarn build:clean && yarn lint && yarn test",
        "copy-for-publish": "cpy --flat ../../LICENSE package.json README.md dist/",
        "lint": "eslint \"src/**/*.ts?(x)\"",
        "test": "vitest run"
    }
}
