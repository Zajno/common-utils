{
    "compilerOptions": {
        "strict": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "esModuleInterop": true,
        "target": "ES2022",
        "lib": ["ESNext"],
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "jsx": "react",
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "importHelpers": true,
        "noEmit": true,
        "types": [
            "vitest/globals"
        ],
    },
}
