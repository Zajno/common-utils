{
  "compilerOptions": {
    "strict": false,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "strictBindCallApply": true,
    "outDir": "./lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "removeComments": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": []
}
